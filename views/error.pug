extends base

block content
  section.error-section
    .container.error-container
      .error-content
        .error-icon
          svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2")
            circle(cx="12" cy="12" r="10")
            line(x1="12" y1="8" x2="12" y2="12")
            line(x1="12" y1="16" x2="12.01" y2="16")

        h1.error-title حدث خطأ

        p.error-message= message || 'عذراً، حدث خطأ ما'

        if error && error.statusCode === 404
          p.error-description الصفحة المطلوبة غير موجودة
        else if error && error.statusCode === 500
          p.error-description حدث خطأ في الخادم، يرجى المحاولة لاحقاً

        .error-actions
          a.btn.btn-primary(href='/') العودة للصفحة الرئيسية

  style.
    .error-section {
      min-height: 70vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 60px 20px;
      background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    }

    .error-container {
      max-width: 600px;
      text-align: center;
    }

    .error-content {
      background: white;
      padding: 50px 40px;
      border-radius: 20px;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
      animation: fadeInUp 0.6s ease;
    }

    .error-icon {
      width: 100px;
      height: 100px;
      margin: 0 auto 30px;
      background: linear-gradient(135deg, #ff0000 0%, #b20000 100%);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      animation: pulse 2s infinite;
    }

    .error-icon svg {
      width: 50px;
      height: 50px;
      color: white;
    }

    .error-title {
      font-size: 2.5rem;
      color: #e60000;
      margin-bottom: 20px;
      font-weight: 700;
    }

    .error-message {
      font-size: 1.2rem;
      color: #4a5568;
      margin-bottom: 15px;
      line-height: 1.6;
    }

    .error-description {
      font-size: 1rem;
      color: #718096;
      margin-bottom: 35px;
    }

    .error-actions {
      display: flex;
      gap: 15px;
      justify-content: center;
      flex-wrap: wrap;
    }

    .error-actions .btn {
      padding: 12px 30px;
      border-radius: 8px;
      text-decoration: none;
      font-weight: 600;
      transition: all 0.3s ease;
      display: inline-block;
    }

    .btn-primary {
      background: linear-gradient(135deg, #00da19 0%, #007a2f 100%);
      color: white;
      border: none;
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
    }

    .btn-secondary {
      background: white;
      color: #667eea;
      border: 2px solid #667eea;
    }

    .btn-secondary:hover {
      background: #667eea;
      color: white;
      transform: translateY(-2px);
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes pulse {
      0%, 100% {
        transform: scale(1);
      }
      50% {
        transform: scale(1.05);
      }
    }

    @media (max-width: 768px) {
      .error-title {
        font-size: 2rem;
      }

      .error-content {
        padding: 40px 25px;
      }

      .error-actions {
        flex-direction: column;
      }

      .error-actions .btn {
        width: 100%;
      }
    }
