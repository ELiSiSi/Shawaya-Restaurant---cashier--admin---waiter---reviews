    style.
      .admin-login-page {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--darker-bg);
      }

      .login-box {
        background: var(--dark-bg);
        padding: 50px;
        border-radius: 20px;
        box-shadow: var(--shadow);
        text-align: center;
        max-width: 400px;
      }

      .login-box h1 {
        color: var(--primary-color);
        margin-bottom: 10px;
      }

      .login-box .subtitle {
        margin: 0 0 30px 0;
        font-size: 1.1rem;
        color: #ccc;
      }

      .D{
        width:20;
        font-weight: bold;
      }

      .white-big {
        color: white;
        font-size: 23px;
        font-weight: bold;
        display: block;
      }

      .error-message {
        background: var(--error-color);
        color: white;
        padding: 10px;
        border-radius: 8px;
        margin-bottom: 20px;
      }

      .form-group {
        margin-bottom: 25px;
        text-align: right;
      }

      label {
        display: block;
        margin-bottom: 8px;
        color: #ddd;
      }

      input {
        width: 100%;
        padding: 12px;
        border: 1px solid #444;
        border-radius: 6px;
        background: #333;
        color: white;
        font-size: 1rem;
      }

      .btn {
        width: 100%;
        padding: 14px;
        background: var(--primary-color);
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 1.1rem;
        cursor: pointer;
      }

      .btn:hover {
        opacity: 0.9;
      }

